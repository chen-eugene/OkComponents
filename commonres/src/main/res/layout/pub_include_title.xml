<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/public_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pub_height_50dp"
    android:background="?attr/colorPrimary"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:id="@+id/public_toolbar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="start">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/pub_mar_left_10dp"
            android:layout_marginEnd="@dimen/pub_mar_right_10dp"
            android:src="@mipmap/pub_ic_arrow_back_white_24dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/public_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/pub_white"
        android:textSize="@dimen/pub_font_18sp"
        tools:text="@string/pub_app_name" />

</androidx.appcompat.widget.Toolbar>