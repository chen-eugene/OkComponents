<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pub_height_80dp"
    android:layout_marginBottom="@dimen/pub_mar_bottom_5dp"
    android:layout_marginStart="@dimen/pub_mar_left_5dp"
    android:layout_marginEnd="@dimen/pub_mar_right_5dp"
    android:layout_marginTop="@dimen/pub_mar_top_3dp"
    app:cardBackgroundColor="@color/pub_white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/pub_width_67dp"
            android:layout_height="@dimen/pub_height_67dp"
            android:scaleType="centerCrop"
            tools:src="@color/pub_black" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pub_mar_left_6dp"
            android:layout_weight="1"
            android:textColor="@color/pub_black"
            android:textSize="@dimen/pub_font_18sp"
            tools:text="ss" />
    </LinearLayout>
</android.support.v7.widget.CardView>